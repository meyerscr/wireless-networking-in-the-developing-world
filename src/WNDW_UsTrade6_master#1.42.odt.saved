<cell xid="4705" props="right-color:#000000; bot-style:solid; bot-thickness:0.0069in; right-attach:2; left-thickness:0.0069in; right-thickness:0.0069in; left-color:#000000; top-style:none; left-attach:1; left-style:solid; right-style:solid; bot-color:#000000; bot-attach:5; top-attach:4">
